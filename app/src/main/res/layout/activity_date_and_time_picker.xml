<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CSE225.DateAndTimePicker">
    <Button
        android:id="@+id/btnPickDateTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Pick Date &amp; Time"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="200dp"/>

    <TextView
        android:id="@+id/txtResult"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Select a date and time"
        app:layout_constraintTop_toBottomOf="@+id/btnPickDateTime"
        app:layout_constraintStart_toStartOf="@+id/btnPickDateTime"
        app:layout_constraintEnd_toEndOf="@+id/btnPickDateTime"
        android:textSize="18sp"
        android:paddingTop="20dp"
        android:textStyle="bold" />

</androidx.constraintlayout.widget.ConstraintLayout>